<!DOCTYPE html>
<html lang='en'>

    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/general.css">
        <%-defineContent('css')%>
        <link rel="apple-touch-icon" sizes="180x180" href="/images/favicons/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/images/favicons/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/images/favicons/favicon-16x16.png">
        <link rel="manifest" href="/images/favicons/site.webmanifest">
        <title id="title"><%- title %></title>
    </head>

    <body data-bs-theme="<%= theme || 'dark' %>" class="darkmode-bg">
        <div class="container mt-5 bg-dark border border-white rounded-2 rounded-bottom-0 position-sticky z-1">
            <div class="row">
                <!-- Large Screen Navigation -->
                <div class="col px-0 d-none d-lg-block">
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <a class="nav-link" href="/" id="Home">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" role="button"
                                aria-expanded="false" id="Planner">Planner</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/planner">View Planner</a></li>
                                <li><a class="dropdown-item" href="/planner#new" id="desktopCreateNewTaskBtn">Create New Task</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" role="button"
                                aria-expanded="false" id="Email">Email</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/mail?view=compose">Compose</a></li>
                                <li><a class="dropdown-item" href="/mail?view=unread">Unread</a></li>
                                <li><a class="dropdown-item" href="/mail">All</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>

                <!-- Small Screen Navigation -->
                <div class="col px-0 d-lg-none">
                    <div class="d-flex justify-content-start">
                        <button class="btn btn-outline-light w-100 py-2 rounded-top-5" type="button" data-bs-toggle="collapse" data-bs-target="#mobileNav"
                            aria-controls="mobileNav" aria-expanded="false" aria-label="Toggle navigation">
                            ‚ò∞ Menu
                        </button>
                    </div>

                    <!-- Collapsible Mobile Menu -->
                    <div class="collapse my-2" id="mobileNav">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link" href="/" id="Home">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="collapse" href="#mobilePlanner" role="button"
                                    aria-expanded="false" aria-controls="mobilePlanner">Planner ‚ñæ</a>
                                <div class="collapse" id="mobilePlanner">
                                    <ul class="list-unstyled ps-3">
                                        <li><a class="nav-link" href="/planner">View Planner</a></li>
                                        <li><a class="nav-link" href="/planner#new" id="mobileCreateNewTaskBtn">Create New Task</a></li>
                                    </ul>
                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="collapse" href="#mobileEmail" role="button"
                                    aria-expanded="false" aria-controls="mobileEmail">Email ‚ñæ</a>
                                <div class="collapse" id="mobileEmail">
                                    <ul class="list-unstyled ps-3">
                                        <li><a class="nav-link" href="/mail?view=compose">Compose</a></li>
                                        <li><a class="nav-link" href="/mail?view=unread">Unread</a></li>
                                        <li><a class="nav-link" href="/mail">All</a></li>
                                    </ul>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Login Section (Shared Across Screens) -->
                <div class="col px-0">
                    <nav id="login" class="nav nav-tabs justify-content-end">
                        <% if (user) { %>
                            <a class="nav-link" href="/account">Account</a>
                            <a class="nav-link" href="/logout">Logout</a>
                        <% } else { %>
                            <a class="nav-link" href="/register">Register</a>
                            <a class="nav-link" href="/login">Login</a>
                        <% } %>
                    </nav>
                </div>
            </div>
        </div>

        <header
            class="container bg-dark border border-white border-top-0 rounded-2 rounded-top-0 hidden-sm hidden-xs position-sticky">
            <div class="row">
                <div class="col px-0">
                    <a class="navbar-brand title" href="/">
                        <img width="40" height="40" class="d-inline-block logo">
                        Gestalt
                    </a>
                </div>
                <div class="col px-0">
                    <% if (user) { %>
                        <p class="text-end py-2">Logged in as <%= user.username %></p>
                    <% } %>
                </div>
                <div class="col-auto pe-0">
                    <button class="btn btn-outline-light py-2 m-0 border-white rounded-5 rounded-end-1" type="button" id="theme-toggle">
                        <span id="theme-icon">üåô</span>
                    </button>
                </div>
            </div>
        </div>
        </header>

        <div
            class="container container bg-secondary-subtle border border-white border-end-0 border-start-0 my-3 position-relative">
            <%- body %>
        </div>
        <footer class="container bg-dark border border-white rounded-2 position-flex mb-5">
            <p class="text-center mb-0">
                Version <a id="version">X</a> | ¬© 2025 KƒÅrlis Biƒ∑ernieks
            </p>
        </footer>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
        <script src="/js/shared.js" defer></script>
        <%- script %>
    </body>

</html>
