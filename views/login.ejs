<% if (error && error.length> 0) { %>
    <div class="alert text-center alert-danger m-3 mb-0">
        <% error.forEach(msg=> { %>
            <p class="m-0">
                <%= msg %>
            </p>
        <% }) %>
    </div>
<% } %>

<% if (success && success.length> 0) { %>
    <div class="alert text-center alert-success m-3 mb-0">
        <% success.forEach(msg=> { %>
            <p class="m-0">
                <%= msg %>
            </p>
        <% }) %>
    </div>
<% } %>

<div class="my-4">
    <form action="/login" method="POST">
        <div class="input-group mb-3">
            <input type="text" name="username" id="username" class="form-control" placeholder="Username" aria-label="Username" required>
        </div>
        <div class="input-group mb-3">
            <input type="password" name="password" id="password" class="form-control" placeholder="Password" aria-label="Password" required>
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    </form>
    <a class="btn btn-secondary mt-3" role="button" href="/register">Or register</a>
</div>

<%- contentFor('css') %>
